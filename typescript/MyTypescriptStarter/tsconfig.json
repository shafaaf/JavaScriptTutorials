{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "umd",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "moduleResolution": "node",
    "strict": true,
    "allowUnreachableCode": false
  },
  "exclude": [
    "src",
    "node_modules",
    "bower_components",
    "dist"
  ]
}
