{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["error", 4],
    "no-console": "off",
    "no-shadow": "off",
    "no-restricted-syntax": ["error", "ForInStatement"],
    "comma-dangle": "off",
    "array-callback-return": "off",
    "no-use-before-define": "off",
    "implicit-arrow-linebreak": "off",
    "consistent-return": "off"
  }
}
